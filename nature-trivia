<body>
    <div class="quiz-container">
        <h1 class="title">MILLION DOLLAR QUIZ</h1>
        
        <div class="money-ladder">
            <div class="money-level" data-level="12">12. $1,000,000</div>
            <div class="money-level" data-level="11">11. $500,000</div>
            <div class="money-level" data-level="10">10. $250,000</div>
            <div class="money-level" data-level="9">9. $125,000</div>
            <div class="money-level" data-level="8">8. $64,000</div>
            <div class="money-level" data-level="7">7. $32,000</div>
            <div class="money-level" data-level="6">6. $16,000</div>
            <div class="money-level" data-level="5">5. $8,000</div>
            <div class="money-level" data-level="4">4. $4,000</div>
            <div class="money-level" data-level="3">3. $2,000</div>
            <div class="money-level" data-level="2">2. $1,000</div>
            <div class="money-level current" data-level="1">1. $500</div>
        </div>
        
        <div class="question-container">
            <div class="question-number">Question <span id="current-question">1</span> of 12</div>
            <div class="question-text" id="question-text">
                How much of Earth's surface is covered in water?
            </div>
            
            <div class="answers-grid">
                <div class="answer-option" data-answer="A">
                    <strong>A:</strong> 30%
                </div>
                <div class="answer-option" data-answer="B">
                    <strong>B:</strong> 50%
                </div>
                <div class="answer-option" data-answer="C">
                    <strong>C:</strong> 70%
                </div>
                <div class="answer-option" data-answer="D">
                    <strong>D:</strong> 90%
                </div>
            </div>
            
            <div class="controls">
                <button class="btn btn-secondary" onclick="previousQuestion()">Previous</button>
                <button class="btn btn-primary" onclick="submitAnswer()">Submit Answer</button>
                <button class="btn btn-secondary" onclick="nextQuestion()">Next Question</button>
            </div>
        </div>
        
        <div class="game-over hidden" id="game-over">
            <h2>Congratulations!</h2>
            <div class="final-amount" id="final-amount">$0</div>
            <p>You've completed the Million Dollar Quiz!</p>
            <button class="btn btn-primary" onclick="restartQuiz()">Play Again</button>
        </div>
    </div>

    <script>
        // Quiz data with nature and geography questions
        const quizData = [
            {
                question: "How much of Earth's surface is covered in water?",
                answers: {
                    A: "30%",
                    B: "50%",
                    C: "70%",
                    D: "90%"
                },
                correct: "C"
            },
            {
                question: "In which Ocean would you find the 'Bermuda Triangle'?",
                answers: {
                    A: "Pacific Ocean",
                    B: "Atlantic Ocean",
                    C: "Indian Ocean",
                    D: "Arctic Ocean"
                },
                correct: "B"
            },
            {
                question: "What is the name for a catastrophic ocean wave?",
                answers: {
                    A: "Hurricane",
                    B: "Typhoon",
                    C: "Tsunami",
                    D: "Cyclone"
                },
                correct: "C"
            },
            {
                question: "Long periods without rain are called what?",
                answers: {
                    A: "Monsoon",
                    B: "Drought",
                    C: "Flood",
                    D: "Storm"
                },
                correct: "B"
            },
            {
                question: "Deciduous trees do not lose their leaves in winter - True or False?",
                answers: {
                    A: "True",
                    B: "False",
                    C: "Only in tropical climates",
                    D: "Only evergreen trees lose leaves"
                },
                correct: "B"
            },
            {
                question: "What is the only living organism that can be viewed from space?",
                answers: {
                    A: "Amazon Rainforest",
                    B: "Great Barrier Reef",
                    C: "Sahara Desert",
                    D: "Antarctic Ice Sheet"
                },
                correct: "B"
            },
            {
                question: "What happens when the moon passes between the sun and the Earth?",
                answers: {
                    A: "Lunar Eclipse",
                    B: "Solar Eclipse",
                    C: "New Moon",
                    D: "Full Moon"
                },
                correct: "B"
            },
            {
                question: "Which waterfall is the world's tallest?",
                answers: {
                    A: "Niagara Falls",
                    B: "Victoria Falls",
                    C: "Angel Falls",
                    D: "Iguazu Falls"
                },
                correct: "C"
            },
            {
                question: "Which is the longest river in the world?",
                answers: {
                    A: "Amazon River",
                    B: "Nile River",
                    C: "Mississippi River",
                    D: "Yangtze River"
                },
                correct: "B"
            },
            {
                question: "What is the fastest flying bird in the world?",
                answers: {
                    A: "Golden Eagle",
                    B: "Peregrine Falcon",
                    C: "Gyrfalcon",
                    D: "Saker Falcon"
                },
                correct: "B"
            },
            {
                question: "How many eyes do (most species) of caterpillar have?",
                answers: {
                    A: "2 eyes",
                    B: "6 eyes",
                    C: "8 eyes",
                    D: "12 eyes"
                },
                correct: "D"
            },
            {
                question: "Which insects were the first living creatures to be sent to space?",
                answers: {
                    A: "Ants",
                    B: "Bees",
                    C: "Fruit flies",
                    D: "Beetles"
                },
                correct: "C"
            }
        ];

        const moneyValues = [500, 1000, 2000, 4000, 8000, 16000, 32000, 64000, 125000, 250000, 500000, 1000000];
        
        let currentQuestionIndex = 0;
        let selectedAnswer = null;
        let gameEnded = false;

        function loadQuestion() {
            if (currentQuestionIndex >= quizData.length) {
                endGame();
                return;
            }

            const question = quizData[currentQuestionIndex];
            document.getElementById('current-question').textContent = currentQuestionIndex + 1;
            document.getElementById('question-text').textContent = question.question;
            
            const answerOptions = document.querySelectorAll('.answer-option');
            answerOptions.forEach((option, index) => {
                const letter = String.fromCharCode(65 + index); // A, B, C, D
                option.innerHTML = `<strong>${letter}:</strong> ${question.answers[letter]}`;
                option.className = 'answer-option';
                option.onclick = () => selectAnswer(letter);
            });

            // Update money ladder
            document.querySelectorAll('.money-level').forEach(level => {
                level.classList.remove('current', 'completed');
                const levelNum = parseInt(level.dataset.level);
                if (levelNum === currentQuestionIndex + 1) {
                    level.classList.add('current');
                } else if (levelNum < currentQuestionIndex + 1) {
                    level.classList.add('completed');
                }
            });

            selectedAnswer = null;
        }

        function selectAnswer(answer) {
            selectedAnswer = answer;
            document.querySelectorAll('.answer-option').forEach(option => {
                option.classList.remove('selected');
            });
            document.querySelector(`[data-answer="${answer}"]`).classList.add('selected');
        }

        function submitAnswer() {
            if (!selectedAnswer) {
                alert('Please select an answer first!');
                return;
            }

            const correctAnswer = quizData[currentQuestionIndex].correct;
            const answerOptions = document.querySelectorAll('.answer-option');
            
            // Show correct/incorrect answers
            answerOptions.forEach(option => {
                const letter = option.dataset.answer;
                if (letter === correctAnswer) {
                    option.classList.add('correct');
                } else if (letter === selectedAnswer && letter !== correctAnswer) {
                    option.classList.add('incorrect');
                }
                option.onclick = null; // Disable clicking
            });

            if (selectedAnswer === correctAnswer) {
                setTimeout(() => {
                    currentQuestionIndex++;
                    if (currentQuestionIndex >= quizData.length) {
                        endGame();
                    } else {
                        loadQuestion();
                    }
                }, 2000);
            } else {
                setTimeout(() => {
                    endGame();
                }, 2000);
            }
        }

        function nextQuestion() {
            if (currentQuestionIndex < quizData.length - 1) {
                currentQuestionIndex++;
                loadQuestion();
            }
        }

        function previousQuestion() {
            if (currentQuestionIndex > 0) {
                currentQuestionIndex--;
                loadQuestion();
            }
        }

        function endGame() {
            document.querySelector('.question-container').classList.add('hidden');
            document.getElementById('game-over').classList.remove('hidden');
            
            let winnings = 0;
            if (currentQuestionIndex > 0) {
                winnings = moneyValues[currentQuestionIndex - 1];
            }
            
            document.getElementById('final-amount').textContent = `$${winnings.toLocaleString()}`;
        }

        function restartQuiz() {
            currentQuestionIndex = 0;
            selectedAnswer = null;
            gameEnded = false;
            document.querySelector('.question-container').classList.remove('hidden');
            document.getElementById('game-over').classList.add('hidden');
            loadQuestion();
        }

        // Initialize the quiz
        loadQuestion();
    </script>
</body>
</html>
